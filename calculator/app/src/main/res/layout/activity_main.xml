<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
        android:id="@+id/edt_nhap"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:gravity="right"
        android:textSize="50sp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_kq"
            android:paddingRight="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:background="@color/gray_800"
            android:text="0"
            android:textSize="50sp" />
        <Button
            android:id="@+id/btn_xoa"
            android:backgroundTint="@color/gray_800"
            app:cornerRadius = "0dp"
            android:text="DELETE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TableLayout
        android:stretchColumns="*"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/num7"
                android:layout_marginRight="10dp"
                app:cornerRadius = "0dp"
                android:backgroundTint="@color/gray_600"
                android:text="7"
                android:textSize="50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/num8"
                android:layout_marginRight="10dp"
                app:cornerRadius = "0dp"
                android:backgroundTint="@color/gray_600"
                android:text="8"
                android:textSize="50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/num9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/gray_600"
                android:text="9"
                android:textSize="50sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/div"
                app:cornerRadius = "0dp"
                android:backgroundTint="@color/gray_800"
                android:text="รท"
                android:textSize="50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/num4"
                android:layout_marginRight="10dp"
                app:cornerRadius = "0dp"
                android:backgroundTint="@color/gray_600"
                android:text="4"
                android:textSize="50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/num5"
                android:layout_marginRight="10dp"
                app:cornerRadius = "0dp"
                android:backgroundTint="@color/gray_600"
                android:text="5"
                android:textSize="50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/num6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/gray_600"
                android:text="6"
                android:textSize="50sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/mul"
                app:cornerRadius = "0dp"
                android:backgroundTint="@color/gray_800"
                android:text="*"
                android:textSize="50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/num1"
                android:layout_marginRight="10dp"
                app:cornerRadius = "0dp"
                android:backgroundTint="@color/gray_600"
                android:text="1"
                android:textSize="50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/num2"
                android:layout_marginRight="10dp"
                app:cornerRadius = "0dp"
                android:backgroundTint="@color/gray_600"
                android:text="2"
                android:textSize="50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/gray_600"
                android:text="3"
                android:textSize="50sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/minus"
                app:cornerRadius = "0dp"
                android:backgroundTint="@color/gray_800"
                android:text="-"
                android:textSize="50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/dot"
                android:layout_marginRight="10dp"
                app:cornerRadius = "0dp"
                android:backgroundTint="@color/gray_600"
                android:text="."
                android:textSize="50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/num0"
                android:layout_marginRight="10dp"
                app:cornerRadius = "0dp"
                android:backgroundTint="@color/gray_600"
                android:text="0"
                android:textSize="50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/gray_800"
                android:text="="
                android:textSize="50sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/plus"
                app:cornerRadius = "0dp"
                android:backgroundTint="@color/gray_800"
                android:text="+"
                android:textSize="50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
    </TableLayout>

</LinearLayout>